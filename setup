# Note: bash is used because it's almost always available, zsh might not be.

cd $(dirname $0)
shopt -s extglob

for sourcefile in !(README.md|setup)
do
  dotfile=~/.${sourcefile}
  sourcefile=$(pwd -P)/${sourcefile} # I'm not sure I like this much
  if [ -L ${dotfile} ] || ! [ -f ${dotfile} ]
  then
    rm -f ${dotfile}
    ln -s ${sourcefile} ${dotfile}
  else
    echo "${dotfile} exists, I will not clobber it."
  fi
done

# Set up git options
GIT_OPTIONS="
core.excludesfile=$HOME/.gitignore_global
include.path=repos/dotfiles/gitconfig_roaming
"

# If it does not exist, create it.
touch ~/.gitconfig
for git_option in $GIT_OPTIONS
do
  grep "$git_option" ~/.gitconfig || git config --global ${git_option/=/ }
done
