# Note: bash is used because it's almost always available, zsh might not be.

cd "$(dirname "$0")"
shopt -s extglob

dotfiles_base=$(git rev-parse --show-toplevel)

for sourcefile in !(README.md|setup)
do
  dotfile=~/.${sourcefile}
  sourcefile=${dotfiles_base}/${sourcefile} # I'm not sure I like this much
  if [ -L "${dotfile}" ] || ! [ -f "${dotfile}" ]
  then
    rm -f "${dotfile}"
    ln -s "${sourcefile}" "${dotfile}"
  else
    echo "${dotfile} exists, I will not clobber it."
  fi
done

# Set up git options
read -r -d '' GIT_OPTIONS << __J__
{
  "core.excludesfile": "$HOME/.gitignore_global",
  "include.path": "${dotfiles_base}/gitconfig_roaming",
  "push.default": "simple",
  "github.user": "bahamat"
}
__J__

# If it does not exist, create it.
touch ~/.gitconfig
for git_option in $(json -ak <<< "$GIT_OPTIONS")
do
  git config "$git_option" > /dev/null || \
    git config --global "${git_option}" "$(json "[\"${git_option}\"]" <<< "$GIT_OPTIONS")"
done

git submodule init
git submodule update --depth=1
git submodule foreach 'git reset HEAD --hard'
